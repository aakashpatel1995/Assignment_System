<!DOCTYPE html>
<html lang="en">
	<%- include('layouts/head'); -%>
	<body>

		<!-- Loader -->
		<div id="global-loader">
			<img src="assets/img/loader.svg" class="loader-img" alt="Loader">
		</div>
		<!-- End Loader -->

		<!-- Page -->
		<div class="page">

			<!-- Sidemenu -->
			<%- include('layouts/sidemenu'); -%>
			<!-- End Sidemenu -->

			<!-- Main Content-->
			<%- include('layouts/header'); -%>
			<div class="row text-center pl-0 pr-0 ml-0 mr-0">
				<div class="col-lg-3 d-block mx-auto">
					
					<div class="card custom-card">
						<div class="card-body">
							<h4 class="text-center">Request For Assignemnt</h4>
							<form action="/webreqass" method="post" enctype="multipart/form-data">
								<div class="form-group text-left">
									<label>Assignment Name:</label>
									<input class="form-control" name="assignmentName" placeholder="Enter your assignmentName" type="text" >
								</div>
                                <div class="form-group text-left">
									<label>Deadline:</label>
									<input class="form-control" name="deadlineDate" placeholder="Enter your Assignemnt Deadline" type="date" >
								</div>
								<div class="form-group text-left">
									<label>Price:</label>
									<input class="form-control" name="price" placeholder="Enter your Assignemnt price" type="text" >
								</div>
								<div class="form-group text-left">
									<label>Upload Instructions:</label>
									<input class="form-control" name="files" placeholder="Enter your Assignemnt File" type="file" >
								</div>
								
                                
								<button class="btn ripple btn-main-primary btn-block">Request</button>
							</form>
							
						</div>
					</div>
				</div>
			</div>
			<!-- End Main Content-->

			<!-- Sidebar -->
			
			<!-- End Sidebar -->

			<!-- Main Footer-->
			<div class="main-footer text-center">
				<div class="container">
					<div class="row">
						<div class="col-md-12">
							<span>Copyright Â© 2021 <a href="#">Dashlead</a>. Designed by <a href="https://www.spruko.com/">Spruko</a> All rights reserved.</span>
						</div>
					</div>
				</div>
			</div>
			<!--End Footer-->

		</div>
		<!-- End Page -->

		<!-- Back-to-top -->
		<%- include('layouts/scripts'); -%>

	</body>
</html>