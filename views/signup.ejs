<!DOCTYPE html>
<html lang="en">
	<%- include('layouts/head'); -%>

	<body class="main-body">

		<!-- Loader -->
		
		<!-- End Loader -->

		<!-- Page -->
		<div class="page main-signin-wrapper">

			<!-- Row -->
			<div class="row text-center pl-0 pr-0 ml-0 mr-0">
				<div class="col-lg-3 d-block mx-auto">
					<% if(err['all']) {%>
						<div class="form-group">
							<span class="text-danger"><%=err['all']%></span>
						</div>
						<%}%>
						<% if(err['success']) {%>
							<div class="form-group">
								<span class="text-success"><%=err['success']%></span>
							</div>
							<%}%>
					<div class="card custom-card">
						<div class="card-body">
							<h4 class="text-center">Signup to Your Account</h4>
							<form action="/websignup" method="post">
								<div class="form-group text-left">
									<label>FirstName</label>
									<input class="form-control" name="firstname" placeholder="Enter your Name" type="text" >
								</div>
                                <div class="form-group text-left">
									<label>LastName</label>
									<input class="form-control" name="lastname" placeholder="Enter your Name" type="text" >
								</div>
								<div class="form-group text-left">
									<label>Email</label>
									<input class="form-control" name="email" placeholder="Enter your email" type="text">
									<% if(err['emailval']) {%>
										<div class="form-group">
											<span class="text-danger"><%=err['emailval']%></span>
										</div>
										<%}%>
										<% if(err['alreadyUser']) {%>
											<div class="form-group">
												<span class="text-danger"><%=err['alreadyUser']%></span>
											</div>
											<%}%>
								</div>
								<div class="form-group text-left">
									<label>Password</label>
									<input class="form-control" name="password" placeholder="Enter your password" type="password">
									<% if(err['passval']) {%>
										<div class="form-group">
											<span class="text-danger"><%=err['passval']%></span>
										</div>
										<%}%>
								</div>
                                <div class="form-group text-left">
                                    <label>Select Your type</label>
                                </div>
                                <div class="form-group text-left">
									<label>student</label>
									<input name="role" value="student" type="radio" checked> 
									<label>Solver</label>
									<input name="role" type="radio" value="solver"> 
								</div>
                                
								<button class="btn ripple btn-main-primary btn-block">Create Account</button>
							</form>
							<div class="mt-3 text-center">
								<p class="mb-0">Already have an account? <a href="/login">Sign In</a></p>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- End Row -->

		</div>
		<!-- End Page -->

		<!-- Jquery js-->
		<%- include('layouts/scripts'); -%>
	</body>
</html>